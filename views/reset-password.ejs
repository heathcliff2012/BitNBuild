<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-image: url('https://images.unsplash.com/photo-1470770841072-f978cf4d019e?q=80&w=2070&auto=format&fit=crop');
            background-size: cover;
            background-position: center;
        }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen">

    <div class="w-full max-w-md p-8 space-y-6 bg-white/90 backdrop-blur-sm rounded-xl shadow-2xl">
        
        <!-- Header -->
        <div>
            <h1 class="text-3xl font-bold text-center text-gray-800">Create a New Password</h1>
            <p class="mt-2 text-center text-sm text-gray-600">
                Please enter and confirm your new password below.
            </p>
        </div>

        <!-- Form -->
        <form id="reset-form" class="space-y-6">
            <div>
                <label for="password" class="text-sm font-medium text-gray-700">New Password</label>
                <input id="password" name="password" type="password" required
                    class="mt-1 block w-full px-4 py-3 bg-white border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                    placeholder="Enter new password">
            </div>
            <div>
                <label for="confirm-password" class="text-sm font-medium text-gray-700">Confirm New Password</label>
                <input id="confirm-password" name="confirm-password" type="password" required
                    class="mt-1 block w-full px-4 py-3 bg-white border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                    placeholder="Confirm new password">
            </div>

            <div>
                <button type="submit"
                    class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out">
                    Reset Password
                </button>
            </div>
        </form>

        <!-- Message Area -->
        <div id="message-area" class="text-center text-sm font-medium"></div>
    </div>

    <script>
        const form = document.getElementById('reset-form');
        const messageArea = document.getElementById('message-area');
        const passwordInput = document.getElementById('password');
        const confirmPasswordInput = document.getElementById('confirm-password');
        const submitButton = form.querySelector('button[type="submit"]');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            messageArea.textContent = '';
            messageArea.className = 'text-center text-sm font-medium';

            const password = passwordInput.value;
            const confirmPassword = confirmPasswordInput.value;

            // --- Client-side validation ---
            if (password !== confirmPassword) {
                messageArea.textContent = 'Passwords do not match.';
                messageArea.classList.add('text-red-600');
                return;
            }

            if (password.length < 8) {
                messageArea.textContent = 'Password must be at least 8 characters long.';
                messageArea.classList.add('text-red-600');
                return;
            }

            submitButton.disabled = true;
            submitButton.textContent = 'Resetting...';

            try {
                // --- Get the token from the URL ---
                const urlPath = window.location.pathname;
                const pathParts = urlPath.split('/');
                const token = pathParts[pathParts.length - 1];

                if (!token) {
                    throw new Error('Reset token not found in URL.');
                }

                // --- API Call to Backend ---
                // IMPORTANT: This endpoint must match your backend route for resetting the password
                const response = await fetch(`/api/password-reset/reset/${token}`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ password: password }),
                });

                const data = await response.json();

                if (!response.ok) {
                   throw new Error(data.message || 'Token is invalid or has expired.');
                }

                // --- Handle Success ---
                messageArea.textContent = "Your password has been reset successfully! You can now log in.";
                messageArea.classList.add('text-green-600');
                form.style.display = 'none'; // Hide the form on success
                // Optionally, add a link to the login page
                const loginLink = document.createElement('a');
                loginLink.href = '/login'; // Adjust this path if your login page is elsewhere
                loginLink.textContent = 'Go to Login';
                loginLink.className = 'text-indigo-600 hover:text-indigo-700 font-semibold';
                messageArea.appendChild(document.createElement('br'));
                messageArea.appendChild(document.createElement('br'));
                messageArea.appendChild(loginLink);


            } catch (error) {
                // --- Handle Failure ---
                messageArea.textContent = error.message;
                messageArea.classList.add('text-red-600');
                submitButton.disabled = false;
                submitButton.textContent = 'Reset Password';
            }
        });
    </script>
</body>
</html>

