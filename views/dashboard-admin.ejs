<!DOCTYPE html>
<html lang="en" class="auraFlow">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AuraFlow: Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        :root {
            --background: radial-gradient(circle at 20% 30%, #2563eb, #22c55e);
            --foreground: rgba(0,0,0,0.2);
            --text-primary: #f8fafc;
            --text-secondary: #d1fae5;
            --accent: #06b6d4;
            --highlight: #fcd34d;
            --danger: #f87171;
        }
        body { background: #0b1120 var(--background) fixed; color: var(--text-primary); font-family: 'Inter', sans-serif; }
        .widget-card { background: rgba(15, 23, 42, 0.4); backdrop-filter: blur(12px); border: 1px solid rgba(255,255,255,0.1); transition: all 0.3s ease; }
        .widget-card:hover { border-color: var(--accent); }
        .animate-slide-up { animation: slideUp 0.5s ease-out forwards; opacity: 0; }
        @keyframes slideUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
        canvas { position: fixed; top: 0; left: 0; z-index: -1; }
    </style>
</head>
<body class="antialiased min-h-screen">
    
    <canvas id="background-canvas"></canvas>

    <div id="app-container" class="max-w-7xl mx-auto p-4 sm:p-6 lg:p-8">
        <header class="flex flex-col sm:flex-row justify-between items-center mb-8 space-y-4 sm:space-y-0">
            <div>
                <h1 class="text-3xl font-bold text-white">Admin Dashboard</h1>
                <p class="text-sm text-secondary">Public Fund Allocation Management</p>
            </div>
            <div class="flex items-center space-x-2">
                 <a href="/community-feedback" class="bg-slate-800/50 text-white font-semibold py-2 px-4 rounded-lg flex items-center gap-2 border border-white/10 hover:border-accent transition">
                    <i data-lucide="messages-square" class="w-4 h-4 text-accent"></i> Forum
                </a>
                 <a href="/dashboard-public" class="bg-slate-800/50 text-white font-semibold py-2 px-4 rounded-lg flex items-center gap-2 border border-white/10 hover:border-accent transition">
                    <i data-lucide="home" class="w-4 h-4"></i> Home
                </a>
            </div>
        </header>

        <main id="content-area"></main>
    </div>

    <div id="budget-modal" class="fixed inset-0 z-50 flex items-center justify-center bg-black/60 backdrop-blur-sm hidden">
        <div class="widget-card rounded-2xl p-8 w-full max-w-md mx-4">
            <h2 class="text-2xl font-bold text-white flex items-center gap-3"><i data-lucide="coins" class="text-highlight"></i>Set Total Budget</h2>
            <input id="total-budget-input" type="number" class="mt-6 block w-full text-2xl bg-black/40 p-3 rounded-xl border border-white/10 text-white outline-none focus:border-accent">
            <div class="mt-8 flex justify-end space-x-3">
                <button id="close-modal-btn" class="text-secondary px-4 py-2">Cancel</button>
                <button id="save-budget-btn" class="bg-highlight text-black font-bold py-2 px-6 rounded-lg">Save Budget</button>
            </div>
        </div>
    </div>

<script type="module">
    // --- STATE & DATA ---
    const appState = {
        totalBudget: Number('<%= typeof totalBudget !== "undefined" ? totalBudget : 5000000000 %>'),
        publicAllocations: [
    { 
        id: "transport", 
        title: "<%= transport ? transport.title : 'Transport' %>", 
        description: "<%= transport ? transport.description : 'Public transit and road maintenance.' %>",
        allocation: Number('<%= transport ? transport.allocation : 0 %>'), 
        icon: "bus-front", 
        page: "/transport" 
    },
    { 
        id: "infrastructure", 
        title: "<%= infrastructure ? infrastructure.title : 'Infrastructure' %>", 
        description: "<%= infrastructure ? infrastructure.description : 'City development and public works.' %>",
        allocation: Number('<%= infrastructure ? infrastructure.allocation : 0 %>'), 
        icon: "building-2", 
        page: "/infrastructure" 
    },
    { 
        id: "education", 
        title: "<%= education ? education.title : 'Education' %>", 
        description: "<%= education ? education.description : 'Funding for schools and learning resources.' %>",
        allocation: Number('<%= education ? education.allocation : 0 %>'), 
        icon: "graduation-cap", 
        page: "/education" 
    },
    { 
        id: "healthcare", 
        title: "<%= healthcare ? healthcare.title : 'Healthcare' %>", 
        description: "<%= healthcare ? healthcare.description : 'Public health services and hospital support.' %>",
        allocation: Number('<%= healthcare ? healthcare.allocation : 0 %>'), 
        icon: "heart-pulse", 
        page: "/healthcare" 
    },
    { 
        id: "subsidies", 
        title: "<%= subsidies ? subsidies.title : 'Subsidies' %>", 
        description: "<%= subsidies ? subsidies.description : 'Financial support for essential services.' %>",
        allocation: Number('<%= subsidies ? subsidies.allocation : 0 %>'), 
        icon: "receipt", 
        page: "/subsidies" 
    },
    { 
        id: "college_funds", 
        title: "<%= college ? college.title : 'College Grants' %>", 
        description: "<%= college ? college.description : 'Financial aid and scholarships for students.' %>",
        allocation: Number('<%= college ? college.allocation : 0 %>'), 
        icon: "book-marked", 
        page: "/college-funds" 
    }
],
      // FIX: Inject the server-side 'comments' variable into a client-side array
        forumComments: <%- JSON.stringify(
            (typeof comments !== 'undefined' && comments.length > 0) 
            ? comments.map(c => ({
                username: c.username, 
                text: c.text, 
                date: new Date(c.createdAt).toLocaleDateString()
              })) 
            : [{ username: "System", text: "No recent community feedback.", date: "" }]
        ) %> // Remove the semicolon from inside the EJS tag
    };

    const render = () => {
        const totalAllocated = appState.publicAllocations.reduce((sum, item) => sum + item.allocation, 0);
        const remaining = appState.totalBudget - totalAllocated;
        const content = document.getElementById('content-area');

        content.innerHTML = `
            <div class="widget-card p-8 rounded-3xl animate-slide-up">
                <div class="flex justify-between items-center mb-8">
                    <div><h2 class="text-2xl font-bold">Budget Analysis</h2><p class="text-secondary">Summary of city funds</p></div>
                    <button id="open-modal-btn" class="bg-white/5 border border-white/10 p-2 rounded-lg hover:bg-accent/10 transition"><i data-lucide="settings"></i></button>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
                    <div><p class="text-xs text-secondary uppercase">Total Budget</p><p class="text-3xl font-black text-white">₹${(appState.totalBudget/10000000).toFixed(2)}Cr</p></div>
                    <div><p class="text-xs text-secondary uppercase">Allocated</p><p class="text-3xl font-black text-white">₹${(totalAllocated/10000000).toFixed(2)}Cr</p></div>
                    <div><p class="text-xs text-secondary uppercase">Remaining</p><p class="text-3xl font-black ${remaining < 0 ? 'text-red-400' : 'text-accent'}">₹${(remaining/10000000).toFixed(2)}Cr</p></div>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12">
                ${appState.publicAllocations.map((item, i) => `
                    <div class="widget-card p-6 rounded-2xl animate-slide-up" style="animation-delay: ${i*100}ms">
                        <div class="flex justify-between items-start mb-6">
                            <i data-lucide="${item.icon}" class="text-accent w-8 h-8"></i>
                            <span class="text-[10px] font-bold text-accent uppercase border border-accent/30 px-2 py-1 rounded">Live</span>
                        </div>
                        <h3 class="text-xl font-bold mb-1">${item.title}</h3>
                        <p class="text-2xl font-black text-white">₹${(item.allocation/10000000).toFixed(2)} Cr</p>
                        <p class="text-sm text-secondary mt-2 font-bold">${item.description}</p>
                        <a href="${item.page}" class="mt-6 block text-center py-2 bg-white/5 rounded-lg border border-white/10 hover:bg-accent/10 transition">Manage</a>
                    </div>
                `).join('')}
            </div>

            <div class="mt-12 animate-slide-up" style="animation-delay: 600ms">
                <h2 class="text-xl font-bold mb-6 flex items-center gap-2"><i data-lucide="message-square" class="text-accent"></i> Recent Community Feedback</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    ${appState.forumComments.map(c => `
                        <div class="bg-black/20 p-4 rounded-xl border-l-4 border-accent">
                            <div class="flex justify-between text-[10px] font-bold text-accent mb-2"><span>${c.username}</span><span>${c.date}</span></div>
                            <p class="text-sm text-secondary">${c.text}</p>
                        </div>
                    `).join('')}
                </div>
            </div>
        `;
        lucide.createIcons();
    };

        // Modal Handlers
        document.addEventListener('click', e => {
            if(e.target.closest('#open-modal-btn')) {
                document.getElementById('total-budget-input').value = appState.totalBudget;
                document.getElementById('budget-modal').classList.remove('hidden');
            }
            if(e.target.id === 'close-modal-btn' || e.target.id === 'budget-modal') {
                document.getElementById('budget-modal').classList.add('hidden');
            }
        });

        document.getElementById('save-budget-btn').onclick = () => {
            appState.totalBudget = Number(document.getElementById('total-budget-input').value);
            document.getElementById('budget-modal').classList.add('hidden');
            render();
        };

        document.addEventListener('DOMContentLoaded', render);
    </script>
</body>
</html>